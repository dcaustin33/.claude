{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "haiku",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'Claude needs your attention' -title 'Claude Code' -sound Ping"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'Claude has stopped' -title 'Claude Code' -sound Ping"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "code-review@claude-code-plugins": true
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754082963204
  },
  "mcpServers": {
    "blender": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "blender-mcp"
      ]
    }
  }
}
